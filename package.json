{
  "name": "@pigeon-ui/monorepo",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*",
    "demo/*"
  ],
  "scripts": {
    "dev": "npm run dev -w demo/authwidget",
    "dev:lib": "npm run dev -w packages/authwidget",
    "dev:check": "npm run dev -w packages/authwidget & npm run dev -w demo/authwidget",
    "build": "npm run build -w packages/authwidget && npm run build -w demo/authwidget",
    "build:lib": "npm run build -w packages/authwidget",
    "build:demo": "npm run build -w demo/authwidget",
    "lint": "npm run lint --workspaces --if-present",
    "lint:lib": "npm run lint -w packages/authwidget",
    "lint:demo": "npm run lint -w demo/authwidget",
    "clean": "npm run clean --workspaces --if-present",
    "typecheck": "npm run typecheck --workspaces --if-present",
    "preview:demo": "npm run preview -w demo/authwidget"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "typescript": "~5.9.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
